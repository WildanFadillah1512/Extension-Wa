{
  "manifest_version": 3,
  "name": "WA Super Tools (Save, Broadcast & Reminder)",
  "version": "3.6",
  "description": "Optimized WA Tools: Saver, Broadcast & Smart Reminder.",
  "minimum_chrome_version": "88",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "run_at": "document_idle",
      "js": [
        "content_saver.js", 
        "content_broadcast.js",
        "content_reminder.js"
      ]
    }
  ]
}